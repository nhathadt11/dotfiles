# lower
lower() {
  echo "$@" | tr '[:upper:]' '[:lower:]'
}

# kpp
kpp() {
  # Kill process associated with a specific port
  pid=$(lsof -t -i:$@)

  if [ -n "$pid" ]; then
      echo "Process running on port $@ with PID: $pid. Terminating..."
      kill -9 $pid
  else
      echo "No process found running on port $@."
  fi
}

